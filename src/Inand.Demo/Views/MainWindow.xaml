<Window x:Class="Inand.Demo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inand.Demo"
        Background="{DynamicResource BackgroundFillBrush}"
        Width="1350"
        Height="810"
        MinWidth="810"
        MinHeight="450">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Light"
                      Click="SetLight_Click" />
            <MenuItem Header="Dark"
                      Click="SetDark_Click" />
        </ContextMenu>
    </Window.ContextMenu>
    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Border Background="{DynamicResource PrimaryFillBrush}"
                Focusable="True"
                FocusVisualStyle="{StaticResource FocusVisualDefault}"
                CornerRadius="{StaticResource CornerRadiusDefault}"
                Width="100"
                Height="100" />
        <Border Background="{DynamicResource ErrorFillBrush}"
                Focusable="True"
                FocusVisualStyle="{StaticResource FocusVisualDefault}"
                CornerRadius="{StaticResource CornerRadiusDefault}"
                Margin="16,0,0,0"
                Width="100"
                Height="100" />
    </StackPanel>
</Window>
