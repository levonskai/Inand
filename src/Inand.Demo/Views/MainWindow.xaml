<Window x:Class="Inand.Demo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:in="https://github.com/levonskai/Inand"
        Title="Inand.Demo"
        Background="{DynamicResource BackgroundFillBrush}"
        Width="1350"
        Height="810"
        MinWidth="810"
        MinHeight="450">
    <Window.Resources>
        <Geometry x:Key="AddGeometry">
            M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z
        </Geometry>
        <Geometry x:Key="SubjectGeometry">
            M14 17H4v2h10v-2zm6-8H4v2h16V9zM4 15h16v-2H4v2zM4 5v2h16V5H4z
        </Geometry>
    </Window.Resources>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Light"
                      Click="SetLight_Click" />
            <MenuItem Header="Dark"
                      Click="SetDark_Click" />
        </ContextMenu>
    </Window.ContextMenu>
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Button Content="LABEL" />
            <Button Content="LABEL"
                    in:IconAssist.Geometry="{StaticResource AddGeometry}"
                    Margin="16,0,0,0" />
            <Button Content="LABEL"
                    IsEnabled="False"
                    in:IconAssist.Geometry="{StaticResource AddGeometry}"
                    Margin="16,0,0,0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="0,16,0,0">
            <Button Content="LABEL"
                    Style="{StaticResource ButtonOutlined}" />
            <Button Content="LABEL"
                    Style="{StaticResource ButtonOutlined}"
                    IsEnabled="False"
                    Margin="16,0,0,0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="0,16,0,0">
            <Button Content="LABEL"
                    Style="{StaticResource ButtonText}" />
            <Button Content="LABEL"
                    Style="{StaticResource ButtonText}"
                    IsEnabled="False"
                    Margin="16,0,0,0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="0,16,0,0">
            <Button in:IconAssist.Geometry="{StaticResource SubjectGeometry}"
                    Style="{StaticResource ButtonIcon}" />
            <Button in:IconAssist.Geometry="{StaticResource SubjectGeometry}"
                    BorderBrush="{DynamicResource OutlineStrokeBrush}"
                    BorderThickness="1"
                    Style="{StaticResource ButtonIcon}"
                    Margin="16,0,0,0" />
            <Button in:IconAssist.Geometry="{StaticResource SubjectGeometry}"
                    Style="{StaticResource ButtonIcon}"
                    IsEnabled="False"
                    Margin="16,0,0,0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="0,16,0,0">
            <Button in:IconAssist.Geometry="{StaticResource AddGeometry}"
                    Style="{StaticResource ButtonFAB}" />
            <Button in:IconAssist.Geometry="{StaticResource AddGeometry}"
                    Style="{StaticResource ButtonFAB}"
                    IsEnabled="False"
                    Margin="16,0,0,0" />
        </StackPanel>
    </StackPanel>
</Window>
