<Window x:Class="Inand.Demo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:in="https://github.com/levonskai/Inand"
        Title="Inand.Demo"
        Background="{DynamicResource BackgroundFillBrush}"
        Width="1350"
        Height="810"
        MinWidth="810"
        MinHeight="450">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground"
                    Value="{DynamicResource OnSurfaceHighBrush}" />
            <Setter Property="in:CornerRadiusAssist.CornerRadius"
                    Value="{DynamicResource CornerRadiusDefault}" />
            <Setter Property="Width"
                    Value="100" />
            <Setter Property="Height"
                    Value="100" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border Background="{DynamicResource SurfaceFillBrush}"
                                BorderBrush="{DynamicResource OutlineStrokeBrush}"
                                BorderThickness="1"
                                CornerRadius="{TemplateBinding in:CornerRadiusAssist.CornerRadius}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Label Content="0"
               in:CornerRadiusAssist.CornerRadius="0" />
        <Label Content="0"
               Margin="16,0,0,0" />
        <Label Content="0"
               in:CornerRadiusAssist.CornerRadius="12"
               Margin="16,0,0,0" />
        <Label Content="0"
               in:CornerRadiusAssist.CornerRadius="360"
               Margin="16,0,0,0" />
    </StackPanel>
</Window>
