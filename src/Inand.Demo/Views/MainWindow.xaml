               Margin="12" />
        <Label Content="20"
               Effect="{StaticResource ShadowDepth20}"
               Margin="12" />
        <Label Content="21"
               Effect="{StaticResource ShadowDepth21}"
               Margin="12" />
        <Label Content="22"
               Effect="{StaticResource ShadowDepth22}"
               Margin="12" />
        <Label Content="23"
               Effect="{StaticResource ShadowDepth23}"
               Margin="12" />
        <Label Content="24"
               Effect="{StaticResource ShadowDepth24}"
               Margin="12" />
    </WrapPanel>
</Window>
