<Window x:Class="Inand.Demo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:in="https://github.com/levonskai/Inand"
        Title="Inand.Demo"
        Background="{DynamicResource BackgroundFillBrush}"
        Width="1350"
        Height="810"
        MinWidth="810"
        MinHeight="450">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground"
                    Value="{DynamicResource OnSurfaceHighBrush}" />
            <Setter Property="in:CornerRadiusAssist.CornerRadius"
                    Value="{DynamicResource CornerRadiusDefault}" />
            <Setter Property="Width"
                    Value="100" />
            <Setter Property="Height"
                    Value="100" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Grid>
                            <AdornerDecorator Effect="{TemplateBinding in:ElevationAssist.Depth, Converter={x:Static in:ShadowConverter.Instance}}">
                                <Border Background="{DynamicResource SurfaceFillBrush}"
                                        CornerRadius="{TemplateBinding in:CornerRadiusAssist.CornerRadius}" />
                            </AdornerDecorator>
                            <Border Background="White"
                                    Opacity="{TemplateBinding in:ElevationAssist.Depth, Converter={x:Static in:OverlayConverter.Instance}}"
                                    CornerRadius="{TemplateBinding in:CornerRadiusAssist.CornerRadius}" />
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Light"
                      Click="SetLight_Click" />
            <MenuItem Header="Dark"
                      Click="SetDark_Click" />
        </ContextMenu>
    </Window.ContextMenu>
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Label x:Name="uiCard" />
        <Slider Value="{Binding ElementName=uiCard, Path=(in:ElevationAssist.Depth)}"
                Minimum="0"
                Maximum="24"
                SmallChange="1"
                LargeChange="1"
                Width="180"
                Margin="0,32,0,0"
                TickPlacement="BottomRight"
                AutoToolTipPlacement="TopLeft"
                IsSnapToTickEnabled="True" />
    </StackPanel>
</Window>
